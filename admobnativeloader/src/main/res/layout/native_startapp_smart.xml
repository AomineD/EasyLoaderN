<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/banner_container"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:orientation="vertical"
    android:visibility="visible">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        card_view:cardBackgroundColor="@color/white">


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/linlay"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:gravity="end"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sponsor_ad"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:gravity="end"
            android:text="Announce"
            android:textAlignment="textEnd"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ad_choices"
            android:layout_width="28dp"
            android:layout_marginEnd="10dp"
            android:layout_height="28dp">


        </ImageView>

    </LinearLayout>



    <TextView
        android:id="@+id/title_ad"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:text="@string/loading_ad"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/sponsor_adw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/title_ad"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/roboto"
        android:maxLines="2"
        android:text="Sponsor"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/button_action"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_above="@+id/linlay"
        android:layout_below="@id/sponsor_adw"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="5dp"

        card_view:cardBackgroundColor="@color/white">

        <TextView
            android:id="@+id/callto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Install"
            android:textColor="@color/black" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ad_icon_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/linlay"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="5dp">

    </ImageView>


</RelativeLayout>