<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/banner_container"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:orientation="vertical"
    android:visibility="visible">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        card_view:cardBackgroundColor="@color/white">


    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/media_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="-12dp">


    </ImageView>


    <LinearLayout
        android:id="@+id/linlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_action"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ad_icon_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="7dp"
android:layout_gravity="center_vertical">

        </ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/roboto_black"
                android:gravity="start"
                android:maxLines="1"
                android:text="@string/loading_ad"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sponsor_adw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/roboto"
                android:maxLines="2"
                android:text="Sponsor"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ad_choices"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp">


            </ImageView>

            <TextView
                android:id="@+id/sponsor_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Announce"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/button_action"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_below="@id/media_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        app:cardCornerRadius="5dp"

        card_view:cardBackgroundColor="@color/white">

        <TextView
            android:id="@+id/callto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:textSize="18sp"
            android:text="Install"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>


</RelativeLayout>